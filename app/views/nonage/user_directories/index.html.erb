<%= content_for(:title,  '目录列表 | Koogle') %>
<section class="content-header">
  <h1>
    目录管理 <small>目录信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-info-circle"></i> 目录信息</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_nonage_user_directory_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加目录</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">名称</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">图标</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @directories.each do |item| %>
              <tr>
                <td class="col-sm-4">
                  <img src="<%= local_cover item.cover %>" style="max-height:40px;">
                </td>
                <td class="col-sm-4">
                  <label class="btn bg-black btn-flat" style="font-size: 16px">
                    <i class="fa fa-folder-o"></i>
                    <%= item.name %>
                  </label>
                </td>
                <td class="col-sm-4">
                  <a href="<%= edit_nonage_user_directory_path(item) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                    编辑
                  </a>
                  <a href="<%= nonage_user_directory_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除目录<%= item.name %>?">
                    <i class="glyphicon glyphicon-trash"></i>
                    删除
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @directories.count %>」目录</h5></div>
        </div>
        <div class="col-sm-7">
          <div class="dataTables_paginate paging_simple_numbers">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>